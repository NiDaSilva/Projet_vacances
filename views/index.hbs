<script>
    $("#login").click(function () {
        swal({
            title: 'Connexion',
            html: '{{> popup_login}}',
            showCancelButton: false,
            showConfirmButton: false
        });
    });
    $("#signin").click(function () {
        swal({
            title: 'Inscription',
            html: '{{> popup_signin}}',
            showCancelButton: false,
            showConfirmButton: false
        });
    });
    $("#editProfile").click(function () {
        swal({
            title: 'Editer mon profil',
            html: '{{> popup_editProfile}}',
            showCancelButton: false,
            showConfirmButton: false
        });
    });
    $(".card").click(function () {

        $.ajax({
            url: '/detail',
            data: {
                id: $(this).attr("id")
            },
            dataType: 'json',
            success: function(data) {
                console.log(data);
            },
            type: 'POST'
        });
    });



</script>